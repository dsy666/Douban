<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0 //EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.Douban.mapper.FilmMapper">
    <select id="selectFromTimeAndArea" parameterType="com.example.Douban.pojo.FilmParam" resultType="com.example.Douban.pojo.Film">
        SELECT * FROM film WHERE release_time>#{date} AND #{area_id}>area_id ORDER BY comment_num DESC LIMIT #{limitnum}
    </select>
</mapper>